<h1>Listing Courses</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td width="300px"><%= course.name %></td>
        <td><%= course.description %></td>
        <td class="acoes"><%= link_to 'Show', course, :class => 'btn btn-primary btn-lg outline' %></td>
        <td class="acoes"><%= link_to 'Edit', edit_course_path(course), :class => 'btn btn-primary btn-lg outline' %></td>
        <td class="acoes"><%= link_to 'Destroy', course, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-primary btn-lg outline' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Course', new_course_path, :class => 'btn btn-primary btn-lg outline' %>
