<h1>Listing Students</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Register number</th>
    </tr>
  </thead>

  <tbody>
    <% @students.each do |student| %>
      <tr>
        <td><%= student.name %></td>
        <td width="300px"><%= student.register_number %></td>
        <td class="acoes"><%= link_to 'Show', student, :class => 'btn btn-primary btn-lg outline'  %></td>
        <td class="acoes"><%= link_to 'Edit', edit_student_path(student), :class => 'btn btn-primary btn-lg outline'  %></td>
        <td class="acoes"><%= link_to 'Destroy', student, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-primary btn-lg outline'  %></td>
        <td class="acoes"><%= link_to 'Choose courses', courses_student_path(student), :class => 'btn btn-primary btn-lg outline'  %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Student', new_student_path, :class => 'btn btn-primary btn-lg outline' %>
